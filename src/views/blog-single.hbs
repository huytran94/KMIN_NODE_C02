<nav id="breadcrumbs" class="breadcrumbs">
	<div class="container page-wrapper">
		<a href="index">Home</a> / Blog / <span class="breadcrumb_last" aria-current="page">Standard single post</span>
	</div>
</nav>
<div class="py-5 w3l-homeblock1 text-center">
  <div class="container mt-md-3">
    <h3 class="blog-desc-big text-center mb-4">{{title}}</h3>
    <div class="blog-post-align">
      <div class="blog-post-img">
        <a href="author.html">
          <img src="assets/images/{{author_img}}" alt="" class="rounded-circle img-fluid">
        </a>
      </div>
      <div class="blog-post-info">
        <div class="author align-items-center mb-1">
          <a href="author">{{author}}</a> in <a href="#url">Design</a>
        </div>
        <ul class="blog-meta">
          <li class="meta-item blog-lesson">
            <span class="meta-value"> {{published_timestamp}} </span>
          </li>
          <li class="meta-item blog-students">
            <span class="meta-value"> 6min read</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<section class="blog-post-main w3l-homeblock1">
  <!--/blog-post-->
  <div class="blog-content-inf pb-5">
    <div class="container pb-lg-4">
      <div class="single-post-image">
        <div class="post-content">
          <img src="assets/images/{{cover_image}}" class="radius-image img-fluid mb-5" alt="">
        </div>
      </div>
      <div class="single-post-content">
        {{#each post-content}}
          {{#if (isZero @index)}}
            {{#each this.content}}
              <p class="mb-4">
                {{#if (isZero @index)}}
                  <span class="big-letter">A</span>
                {{/if}}
                {{this}}
              </p>
            {{/each}}
            
            <blockquote class="blockquote my-5">
              <div class="icon-quote">
                <span class="fa fa-quote-left" aria-hidden="true"></span>
              </div>
                {{this.other.quote.txt}}
              <footer class="blockquote-footer mt-3"> {{this.other.quote.author}}</footer>
            </blockquote>
          {{/if}}
          <h3 class="blog-desc-big m-0 mb-4">{{this.subTitle}}</h3>
          {{#each this.content}}
            <p class="mb-4">{{this}}</p>
            {{#if (isArray this)}}
              <div class="text-list mb-4">
                {{#createOrderList this}}
                  {{this}}
                {{/createOrderList}}
              </div>
            {{/if}}
          {{/each}}
          {{#if (containOtherThumb this)}}
            <div class="sing-post-thumb mb-5 row pt-3">
              {{#each this.other.thumbs}}
              <div class="col-sm-6 mt-sm-0 mt-3">
                <a href="#url">
                  <img src="assets/images/{{this}}" class="img-fluid radius-image" alt="">
                </a>
              </div>
              {{/each}}
            </div>
          {{/if}}
        {{/each}}
        
        <div class="d-grid left-right mt-5 pb-md-5">
          <div class="buttons-singles tags">
            <h4>Tags :</h4>
            {{#each tag_list}}
              <a href="#blog-tag">{{this}}</a>
            {{/each}}
            
          </div>
          <div class="buttons-singles">
            <h4>Share :</h4>
            {{#each social_list}}
              <a href="#blog-share">
                <span class="fa fa-{{this}}" aria-hidden="true"></span>
              </a>
            {{/each}}
          </div>
        </div>
        <!--//author-card-->
        <div class="author-card mt-5">
          <div class="row align-items-center">
            <div class="col-sm-3 col-6">
              <div>
                <img src="assets/images/{{author_img}}" alt="" class="rounded-circle img-fluid">
              </div>
            </div>
            <div class="col-sm-9 mt-sm-0 mt-3">
              <h3 class="mb-3 title">{{author}}</h3>
              <p>{{author_desc}}</p>
              <ul class="author-icons mt-4">
                {{#each author_icon}}
                  <li>
                    <a class="dribbble" href="#url">
                      <span class="fa fa-{{this}}" aria-hidden="true"></span>
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
        <!--//author-card-->
        <div class="comments mt-5">
          <h4 class="side-title ">Comments (2)</h4>
